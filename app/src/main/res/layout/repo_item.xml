<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout_repo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_repo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textColor="@color/colorItemRepoTitle"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_short_descr_repo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_title_repo_item"
        android:textSize="14sp"
        android:lines="1"
        android:text="Description" />



    <TextView
        android:id="@+id/tv_lang_repo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_short_descr_repo_item"
         android:textSize="12sp"
        android:layout_marginRight="24dp"
        android:text="Java" />


    <TextView
        android:id="@+id/tv_stars_repo_item"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_short_descr_repo_item"
        android:layout_toRightOf="@+id/tv_lang_repo_item"
        android:layout_marginRight="24dp"
        android:textSize="12sp"
        android:text="45"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_fork_repo_item"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_short_descr_repo_item"
        android:layout_toRightOf="@+id/tv_stars_repo_item"
        android:textSize="12sp"

        android:text="45"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_update_date_repo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stars_repo_item"
        android:textSize="12sp"
        android:text="Date"
        android:paddingBottom="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_update_date_repo_item"
        android:background="@color/colorGreyForBorder"/>
</RelativeLayout>