<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="whartongitviewer.com.jakewhartongitviewer.ActivityDetail">

    <TextView
        android:id="@+id/tv_name_act_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorItemRepoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_descr_act_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:layout_below="@+id/tv_name_act_detail" />



    <TextView
        android:id="@+id/tv_watches_act_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_descr_act_detail"
       android:layout_marginRight="24dp"
        android:text="33"
        android:textSize="12sp" />



    <TextView
        android:id="@+id/tv_stars_act_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_descr_act_detail"
        android:layout_toRightOf="@+id/tv_watches_act_detail"
      android:layout_marginRight="24dp"
        android:text="45"
        android:textSize="12sp" />



    <TextView
        android:id="@+id/tv_fork_act_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_descr_act_detail"
        android:layout_toRightOf="@+id/tv_stars_act_detail"
        android:layout_marginRight="24dp"
        android:text="45"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_issues_act_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_descr_act_detail"
        android:layout_toRightOf="@+id/tv_fork_act_detail"
        android:textSize="12sp"
        android:text="34"/>

</RelativeLayout>
